@model Cadastros
@{
    ViewData["Title"] = "Editar Cadastro";
}
<h1>@ViewData["Title"]</h1>

    <form class="row g-3" asp-controller="Cadastros" asp-action="Alterar" method="post">
        <input type="hidden" asp-for="Prontuário" />
        <div class="col-md-6">
            <label for="prontuario" class="form-label">Prontuário</label>
            <input type="text" class="form-control" asp-for="Prontuário" pattern="[B-C]{2}[0-9]{7}" name="prontuario">
            @Html.ValidationMessageFor(x => x.Prontuário)
        </div>
        <div class="col-md-6">
            <label for="nome" class="form-label">Nome</label>
            <input type="text" class="form-control" asp-for="Nome">
            @Html.ValidationMessageFor(x => x.Nome)
        </div>
        <div class="col-md-6">
            <label for="telefone" class="form-label">Telefone</label>
            <input type="text" class="form-control" asp-for="Telefone" pattern="[0-9]{2}-[0-9]{9}" placeholder="Digite sua Telefone: XX-XXXX... ">
            @Html.ValidationMessageFor(x => x.Telefone)
        </div>
        <div class="col-md-6">
            <label for="email" class="form-label">E-mail</label>
            <input type="email" class="form-control" asp-for="Email">
            @Html.ValidationMessageFor(x => x.Email)
        </div>
        <div class="col-md-6">
            <label for="cnh" class="form-label">CNH</label>
            <input type="text" class="form-control" asp-for="CNH" pattern="[0-9]{11}" placeholder="Digite o número de registrosua da CNH:: XXXX...">
            @Html.ValidationMessageFor(x => x.CNH)
        </div>
    <div class="col-md-6">
        <label for="marca" class="form-label">Marca do veículo</label>        
        <select class="form-select" asp-for="Marca">
            <option selected>Selecione...</option>
            <option>Audi</option>
            <option>Agrale</option>
            <option>Dafra</option>
            <option>BMW</option>
            <option>BYD</option>
            <option>Chery</option>
            <option>Chevrolet</option>
            <option>Citroën</option>
            <option>Ducati</option>
            <option>DS</option>
            <option>JAC Motors</option>
            <option>Fiat</option>
            <option>Ford</option>
            <option>General Motors</option>
            <option>Harley-Davidson</option>
            <option>Haojue</option>
            <option>Honda</option>
            <option>Hyundai</option>
            <option>Iveco</option>
            <option>Kasinski</option>
            <option>Kawasaki</option>
            <option>KTM</option>
            <option>Kia</option>
            <option>Kymco</option>
            <option>Land Rover</option>
            <option>Lexus</option>
            <option>Marcopolo</option>
            <option>Maserati</option>
            <option>Mercedez-Benz</option>
            <option>MINI</option>
            <option>Mitsubishi</option>
            <option>Nissan</option>
            <option>Peugeot</option>
            <option>Porsche</option>
            <option>Renault</option>
            <option>Royal Enfield</option>
            <option>Smart</option>
            <option>Shineray</option>
            <option>Suzuki</option>
            <option>Tesla</option>
            <option>Toyota</option>
            <option>Triumph</option>
            <option>Volkswagen</option>
            <option>Volvo</option>
            <option>Vulcano</option>
            <option>Yamaha</option>
            <option>Zontes</option>
        </select>
        @Html.ValidationMessageFor(x => x.Marca)
    </div>
        <div class="col-md-4">
            <label for="modelo" class="form-label">Modelo do veículo</label>
            <input type="text" class="form-control" asp-for="Modelo">
            @Html.ValidationMessageFor(x => x.Modelo)
        </div>
        <div class="col-md-4">
            <label for="ano" class="form-label">Ano do veículo</label>
            <input type="text" class="form-control" asp-for="Ano" min="1950-01-01" max="today" placeholder="Digite o ano do veiculo: 2015">
            @Html.ValidationMessageFor(x => x.Ano)
        </div>

        <div class="col-md-4">
            <label for="cor" class="form-label">Cor</label>
            <input type="text" class="form-control" asp-for="Cor">
            @Html.ValidationMessageFor(x => x.Cor)
        </div>
        <div class="col-md-6">
            <label for="tipo" class="form-label">Tipo de veículo</label>
            <select class="form-select" asp-for="Tipo">
                <option selected>Selecione...</option>
                <option>CARRO</option>
                <option>MOTO</option>
                <option>VAN</option>
            </select>
            @Html.ValidationMessageFor(x => x.Tipo)
        </div>
        <div class="col-md-6">
            <label for="placa" class="form-label">Placa do veículo</label>
            <input type="text" class="form-control" asp-for="Placa">
            @Html.ValidationMessageFor(x => x.Placa)
        </div>
        <div class="col-md-6">
            <label for="curso" class="form-label">Curso</label>           
            <select class="form-select" asp-for="Curso">
                <option selected>Selecione...</option>
                <option>Bacharelado em Turismo - TUR</option>
                <option>Educação de Jovens e Adultos</option>
                <option>Engenharia de Controle e Automação - ECA</option>
                <option>Licenciatura em Letras - Português - LET</option>
                <option>Licenciatura em Matemática - LMA</option>
                <option>Técnico Concomitante ou Subsequente ao Ensino Médio</option>
                <option>Técnico em Informática para Internet integrado ao Ensino Médio na modalidade Educação de Jovens e Adultos - PROEJA</option>
                <option>Tecnologia em Análise e Desenvolvimento de Sistemas - ADS</option>
                <option>Tecnologia em Automação Industrial - CSA</option>
                <option>Tecnologia em Gestão de Turismo - TUR</option>
            </select>        
            @Html.ValidationMessageFor(x => x.Curso)
        </div>
        <div class="col-md-6">
            <label for="periodo" class="form-label">Período do curso</label>
            <select class="form-select" asp-for="Período">
                <option selected>Selecione...</option>
                <option>Matutino</option>
                <option>Vespertino</option>
                <option>Noturno</option>
                <option>Integral</option>
            </select>
            @Html.ValidationMessageFor(x => x.Período)
        </div>

        <br />

        <div class="d-grid gap-2 col-6 mx-auto mb-3">
            <button class="btn btn-primary" type="submit">Alterar Cadastro!</button>
            <a class="btn btn-secondary" asp-controller="Cadastros" asp-action="Index" role="button">Voltar!</a>
        </div>
    </form>
    

